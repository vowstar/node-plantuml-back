{
  "name": "node-plantuml-back",
  "version": "1.1.1",
  "plantumlVersion": "1.2022.14",
  "description": "A Node.js module and CLI for running PlantUML",
  "main": "index.js",
  "author": "Markus Hedvall <mackanhedvall@gmail.com>",
  "repository": "https://github.com/vowstar/node-plantuml-back",
  "license": "MIT",
  "engines": {
    "node": ">= 6.x"
  },
  "keywords": [
    "plantuml",
    "uml",
    "diagram"
  ],
  "dependencies": {
    "commander": "^9.4.1",
    "node-nailgun-client": "^0.1.2",
    "node-nailgun-server": "^0.3.0",
    "plantuml-encoder": "^1.4.0"
  },
  "devDependencies": {
    "chai": "^4.x",
    "coveralls": "^3.x",
    "mocha": "^10.x",
    "nyc": "^15.x",
    "shelljs": "^0.8.x",
    "standard": "^17.x"
  },
  "files": [
    "index.js",
    "lib/",
    "vendor/plantuml.jar",
    "vendor/*",
    "resources/",
    "nail/plantumlnail.jar",
    "scripts/download.js",
    "scripts/get-plantuml-jar.js",
    "scripts/get-vizjs.js"
  ],
  "scripts": {
    "getpuml": "node scripts/get-plantuml-jar.js",
    "prepare": "npm run getpuml",
    "prepublish": "npm run getpuml",
    "postinstall": "npm run getpuml && node scripts/get-vizjs.js",
    "test": "standard && node test/fixtures/prepare.js && nyc --reporter=lcov mocha --reporter spec --timeout 200000",
    "build": "node nail/build.js",
    "coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "bin": {
    "puml": "index.js"
  }
}
